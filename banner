#!/bin/bash

### banner
#
### Banner with color ###
# by rern
#

hr=$( printf "\e[36m%*s\e[0m\n" "${COLUMNS:-$(tput cols)}" '' | tr ' ' '-' )

usage() {
	example
	echo "example:  banner -c 6 'banner|script'"
	echo -e "
$hr
usage  :  banner [OPTION] 'STRING'
$hr

OPTION:
-c N    - color code              (256 colors mode)
-f FILE - save to file            (to be used as 'cat file')
-m      - used as 'motd'          (in terminal login screen)
-r      - restore original 'motd'

STRING    a-z (lowercase) : will be converted to uppercase
          ' (single quote): must be escaped and place outside quotes
          | (pipe)        : manual line break position
$hr
	"
	exit
}

# functions
################################################################################
string2array() {
	str="${@^^}" # convert to uppercase
	for (( i=0 ; i < ${#str} ; i++ )); do
		# extract each character
		char=${str:i:1}
		# numbers and symbols substitue to use as variable names
		case "$char" in
			[1-9]) char="n$char";;
			0) char='O';;
			' ') char='space';;
			'.') char='dot';;
			':') char='colon';;
			',') char='comma';;
			';') char='semicolon';;
			"'") char='quote';;
			'"') char='doublequote';;
			'+') char='plus';;
			'-') char='dash';;
			'*') char='asterisk';;
			'/') char='slash';;
			'^') char='power';;
			'=') char='equal';;
			'<') char='less';;
			'>') char='more';;
			'%') char='percent';;
			'!') char='exclaim';;
			'@') char='at';;
			'#') char='hash';;
			'$') char='dollar';;
			'&') char='ampersand';;
			'_') char='underscore';;
			'\') char='backslash';;
			'{') char='curlL';;
			'[') char='bracketL';;
			'(') char='parenthesesL';;
			')') char='parenthesesR';;
			']') char='bracketR';;
			'}') char='curlR';;
			'?') char='question';;
			[^A-Z,a-z]) char='space';;
		esac
		# array - name of each line of each character: ar0=(A[0], B[0], C[0], ..)
		ar0[i]=${char}[0]
		ar1[i]=${char}[1]
		ar2[i]=${char}[2]
		ar3[i]=${char}[3]
		ar4[i]=${char}[4]
	done
}

lines=''
array2line() { # with '!'indirect variables to array: li0=" $A[0] $B[0] $C[0] ... "
	# sublines
	li0=" " li1=" "; li2=" "; li3=" "; li4=" "
	for (( i=$1 ; i < $2 ; i++ )); do # '$1'start '$2'end of each line
		li0=$li0"${!ar0[i]} "
		li1=$li1"${!ar1[i]} "
		li2=$li2"${!ar2[i]} "
		li3=$li3"${!ar3[i]} "
		li4=$li4"${!ar4[i]} "
	done
	# sublines to lines
	lines=$lines"\n$li0\n$li1\n$li2\n$li3\n$li4\n"
}

line2banner() {
# auto line wrap
if ! expr index "$1" '|' &> /dev/null; then
	# line wrap to terminal width
	width=$( tput cols )         # terminal width
	perline=$(( width / 6 - 1 )) # banner characters per line
	stringlength="${#1}"           # string length
	lastline=0                   
	[[ $(( stringlength % perline )) > 0 ]] && lastline=1 # remainder line
	bannerline=$(( stringlength / perline + lastline ))   # total banner lines

	string2array "$1" # convert input string to array
	charcount=$perline
	for (( i=0 ; i < $stringlength ; $(let "i+=$perline") )); do # convert array to banner lines
		array2line $i $charcount
		charcount=$(( charcount + perline ))
	done
# manual line wrap with '|'
else
	IFS='|' read -ra linearray <<< "$1"     # split string by '|'
	for (( j=0; j < ${#linearray[*]}; j++ )); do # 'j' keep separation from 'i' loop
		ar0=(); ar1=(); ar2=(); ar3=(); ar4=()   # empty subline arrays
		string2array "${linearray[j]}"
		array2line 0 ${#linearray[j]}
	done
fi
}

# options
colorL=''
colorR=''
file=''
motd=''
while :; do
	case $1 in
		-c) colorL="\e[38;5;${2}m"
			colorR="\e[0m"
			shift;;
		-f) file=$2
			shift;;
		-m) motd=1;;
		-r) if [[ ! -f /etc/motd.banner ]]; then
				echo -e "\nNo custom 'motd' banner found.\n"
				exit
			fi
			rm -f /etc/motd.banner
			rm -f /etc/profile.d/motd.sh
			sed -i '\|cat /etc/banner|d' /etc/profile
			[[ -e /etc/motd.original ]] && mv /etc/motd{.original,}
			cat /etc/motd
			echo -e "Relogin to see this original 'mtod'.\n"
			exit;;
		-h|-\?|--help) ;;
		-?*) echo -e "\nUnknown option: $1";;
		*) break
	esac
	shift
done

